@model FASTWeb.Models.Authenticate.RegistrationModel
@{
    ViewBag.Title = "Reset Password";
}

<h2>Reset Password</h2>

<div class="row">
    <div class="col-md-4">
        <section id="restForm">
            @using (Html.BeginForm("ResetPassword", "Authenticate", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Please enter Employee ID</h4>
                <hr />
                @Html.ValidationSummary()
                <div class="form-group">
                    @Html.LabelFor(m => m.EmployeeID, new { @class = "col-md-5 control-label" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.EmployeeID, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Reset Password" />
                    </div>
                </div>
                <div class="panel panel-info">
                    <div class="panel-body">
                        <p>
                            An email confirmation will be sent to you. This will contain a random generated new password.
                            You can change the password inside the user area.
                        </p>
                    </div>
                </div>
            }
        </section>
    </div>
    <div class="col-md-8">
        <section id="infopage">
            @Html.Partial("_MainInfoPagePartial")
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
