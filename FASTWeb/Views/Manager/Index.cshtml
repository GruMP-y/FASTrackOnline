@{
    ViewBag.Title = "Select Department";
   
    
    
}

<br />
<div class="container-fluid col-lg-12">
    @using (Html.BeginForm("Index", "Manager", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
    <form class="form-horizontal">
        <fieldset>
            <legend>Select the Department to manage.</legend>
            <div class="form-group">
                @Html.Label("Department", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownList("departmentID", new SelectList(Model, "DepartmentID", "GroupName"), htmlAttributes: new { @class = "form-control col-md-9" })
                    <div class="divider col-sm-1" />
                    <input type="submit" value="Manage" class="btn btn-default" />
                </div>
            </div>
        </fieldset>
    </form>
    }
</div>

