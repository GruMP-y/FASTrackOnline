@model FASTService.Model.EmployeeDashboardViewModel
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    var gridAssignments = new WebGrid(Model.assignments, canPage: true, rowsPerPage: 25, selectionFieldName: "selectedRow", ajaxUpdateContainerId: "assignmentContainer");
    gridAssignments.Pager(WebGridPagerModes.NextPrevious);
    var gridAcceptance = new WebGrid(Model.assignments, canPage: true, rowsPerPage: 25, selectionFieldName: "selectedRow", ajaxUpdateContainerId: "assignmentContainer");
    gridAcceptance.Pager(WebGridPagerModes.NextPrevious);
    var gridHistory = new WebGrid(Model.assignments, canPage: true, rowsPerPage: 25, selectionFieldName: "selectedRow", ajaxUpdateContainerId: "assignmentContainer");
    gridHistory.Pager(WebGridPagerModes.NextPrevious);
    
    
}
<br/>
<div id="mainProfile"  class="container-fluid col-lg-12"  >
    <div id="profileContainer" class="panel panel-primary" >
        <div class="panel-heading">
            <h3 class="panel-title pull-left">Employee Profile</h3>
            <div class="clearfix"></div>
        </div>
    </div>
    <div>
        <div class="col-lg-12" style="padding-top:5px">
            <div class="col-lg-2" style="background-color:aliceblue;">
                <br /><br />
                <center>

                    @{
                        if (String.Compare(@Model.Gender, "Male") == 0)
                        {
                            <img src="../Images/default_avatar_male.jpg" width="125" height="125" class="img-circle" />
                        }
                        else
                        {
                            <img src="../Images/default_avatar_female.jpg" width="125" height="125" class="img-circle" />
                        }
                    }
                    <hr/>
                </center>
            </div>
            <div class="col-lg-6">
                <div class="panel-heading">
                </div>
                <h3>@Model.FirstName @Model.MiddleName @Model.LastName</h3> 
                <blockquote class="col-lg-6">
                    <h5>@Model.Position</h5>
                    <h6>@Model.Department</h6>
                    <h6>@Model.EmailAddress</h6>
                    <h6>@Model.PhoneNumber</h6>
                    
                </blockquote>
                <br />

            </div>
            <div class="col-lg-4">
                <div class="panel-heading">
                </div>
                <div class="panel panel-body">
                    <ul class="list-group">
                        <li class="list-group-item small">
                            <span class="badge">(0)</span>
                            @Html.ActionLink("Assigned", "", "")
                        </li>
                        <li class="list-group-item small">
                            <span class="badge">(0)</span>
                            @Html.ActionLink("For Acceptance", "", "")
                        </li>
                    </ul>
                    <br />
                </div>
            </div>
        </div>
    </div>   
</div>
<br/><br/>
<div id="assignments" class="col-lg-12">
    <div id="profileContainer" class="panel panel-info">
        <div class="panel-heading">
            <h3 class=" panel-title pull-left">Assigned Assets</h3>
            <a class="btn btn-default pull-right">Print</a>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <p> Assignments table goes here.... </p>
</div>
<div id="acceptance" class="col-lg-12">
    <div id="profileContainer" class="panel panel-info">
        <div class="panel-heading">
            <h3 class=" panel-title pull-left">Waiting for Acceptance</h3>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <p> Assignments table goes here.... </p>
</div>
<div id="history" class="col-lg-12">
    <div id="profileContainer" class="panel panel-info">
        <div class="panel-heading">
            <h3 class=" panel-title pull-left">Assignment History</h3>
            <a class="btn btn-default pull-right">Print</a>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <p> Assignments table goes here.... </p>
</div>
